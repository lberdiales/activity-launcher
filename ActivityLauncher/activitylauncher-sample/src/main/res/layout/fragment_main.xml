<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#f00"
        android:text="RED"
        app:layout_constraintBottom_toTopOf="@id/button_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0f0"
        android:text="GREEN"
        app:layout_constraintBottom_toTopOf="@id/button_blue"
        app:layout_constraintEnd_toEndOf="@id/button_red"
        app:layout_constraintStart_toStartOf="@id/button_red"
        app:layout_constraintTop_toBottomOf="@id/button_red"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00f"
        android:text="BLUE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_green"
        app:layout_constraintStart_toStartOf="@id/button_green"
        app:layout_constraintTop_toBottomOf="@id/button_green"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>